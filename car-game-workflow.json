              "type": "simple",
              "value": "=[\n  {\"word\": \"RED\", \"emoji\": \"ðŸ”´ðŸš—\", \"category\": \"color\", \"difficulty\": 1},\n  {\"word\": \"BLUE\", \"emoji\": \"ðŸ”µðŸš—\", \"category\": \"color\", \"difficulty\": 1},\n  {\"word\": \"YELLOW\", \"emoji\": \"ðŸŸ¡ðŸš—\", \"category\": \"color\", \"difficulty\": 1}\n]"
            },
            {
              "id": "difficulty",
              "name": "difficulty",
              "type": "simple",
              "value": "={{$json.difficulty || 1}}"
